						<method>injectTabs</method>
					</fme_product_injectTabs>
				</observers>
			</core_block_abstract_prepare_layout_after>-->
			<catalog_product_save_after>
				<observers>
					<fme_save_product_data>
						<type>singleton</type>
						<class>manufacturers/observer_product</class>
						<method>saveTabData</method>
					</fme_save_product_data>
				</observers>
			</catalog_product_save_after>
		</events>
    </adminhtml>   
    <global>
        <models>
            <manufacturers>
                <class>FME_Manufacturers_Model</class>
                <resourceModel>manufacturers_mysql4</resourceModel>
            </manufacturers>
            <manufacturers_mysql4>
                <class>FME_Manufacturers_Model_Mysql4</class>
                <entities>
                    <manufacturers>
                        <table>manufacturers</table>
                    </manufacturers>
					<manufacturers_store>
                        <table>manufacturers_store</table>
                    </manufacturers_store>
					<manufacturers_products>
                        <table>manufacturers_products</table>
                    </manufacturers_products>
                </entities>
            </manufacturers_mysql4>
        </models>
        <resources>
            <manufacturers_setup>
                <setup>
                    <module>FME_Manufacturers</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </manufacturers_setup>
            <manufacturers_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </manufacturers_write>
            <manufacturers_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </manufacturers_read>
        </resources>
        <blocks>
            <manufacturers>
                <class>FME_Manufacturers_Block</class>
            </manufacturers>
        </blocks>
        <helpers>
            <manufacturers>
                <class>FME_Manufacturers_Helper</class>
            </manufacturers>
        </helpers>
		<events>
            <controller_front_init_routers>
                <observers>
                    <manufacturers>
                        <type>singleton</type>
                        <class>FME_Manufacturers_Controller_Router</class>
                        <method>initControllerRouters</method>
                    </manufacturers>
                </observers>
            </controller_front_init_routers>
        </events>
    </global>
	<default>
        <catalog>
            <manufacturers>
				<enabled>1</enabled>
                <product_manufacturer>1</product_manufacturer>
             </manufacturers>
        </catalog>
    </default>
</config>