<?xml version="1.0"?>
<config>
    <tabs>
	<innovate translate="label" module="kissinsights">
	    <label>Innovate</label>
	    <sort_order>100</sort_order>
	</innovate>
    </tabs>
    <sections>
        <kissinsights translate="label comment" module="kissinsights">
            <tab>innovate</tab>
            <label>Kissinsights</label>
            <frontend_type>text</frontend_type>
            <sort_order>30</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                
                <survey translate="label comment" module="kissinsights">
                    <label>Kissinsights Survey</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <kissinsights_on translate="label">
                            <label>Kissinsights On</label>
                            <frontend_type>select</frontend_type>
			    <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[This will place the code in all pages just after the <_body_> tag]]></comment>
                        </kissinsights_on>
			<kissinsights_code translate="label">
                            <label>Kissinsights Code</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Never include the identify code snippet here]]></comment>
                        </kissinsights_code>
			<kissinsights_identify translate="label">
                            <label>Identify logged in respondants?</label>
                            <frontend_type>select</frontend_type>
			    <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[This will identify all answers by their logged in email address (recommended)]]></comment>
                        </kissinsights_identify>
                    </fields>
                </survey>
            </groups>
        </kissinsights>
    </sections>
</config>
