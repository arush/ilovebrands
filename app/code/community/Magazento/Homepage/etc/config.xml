<?xml version="1.0" encoding="utf-8"?>
<config>
    <modules>
        <Magazento_Homepage>
            <version>1.0.0</version>
        </Magazento_Homepage>
    </modules>
    <frontend>
        <layout>
            <updates>
                <homepage>
                    <file>magazento_homepage.xml</file>
                </homepage>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magazento_Homepage>
                    <files>
                        <default>Magazento_Homepage.csv</default>
                    </files>
                </Magazento_Homepage>
            </modules>
        </translate>
    </frontend>
    
    <global>
        <models>
            <homepage>
                <class>Magazento_Homepage_Model</class>
                <resourceModel>homepage_mysql4</resourceModel>
            </homepage>
            <homepage_mysql4>
                <class>Magazento_Homepage_Model_Mysql4</class>
                <entities>
                    <slide>
                        <table>magazento_homepage_slide</table>
                    </slide>
                    <slide_category>
                        <table>magazento_homepage_slide_category</table>
                    </slide_category>
                    <category>
                        <table>magazento_homepage_category</table>
                    </category>
                    <category_store>
                        <table>magazento_homepage_category_store</table>
                    </category_store>
                </entities>
            </homepage_mysql4>
        </models>
        <resources>
            <homepage_setup>
                <setup>
                    <module>Magazento_Homepage</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </homepage_setup>
            <homepage_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </homepage_write>
            <homepage_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </homepage_read>
        </resources>
        <blocks>
            <homepage>
                <class>Magazento_Homepage_Block</class>
            </homepage>
        </blocks>
        <helpers>
            <homepage>
                <class>Magazento_Homepage_Helper</class>
            </homepage>
        </helpers>
    </global>
    <admin>
        <routers>
            <magazento_homepage>
                <use>admin</use>
                <args>
                    <module>Magazento_Homepage</module>
                    <frontName>homepage</frontName>
                </args>
            </magazento_homepage>
        </routers>
    </admin>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <homepage translate="title" module="homepage">
                                            <title>Homepage</title>
                                        </homepage>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <menu>
            <magazento translate="title" module="homepage">
                <title>Magazento</title>
                <sort_order>65</sort_order>
                <children>
                    <homepage translate="title" module="homepage">
                        <title>Homepage</title>
                        <sort_order>65</sort_order>
                        <children>
                            <settings translate="title" module="homepage">
                                <title>Settings</title>
                                <action>adminhtml/system_config/edit/section/homepage</action>
                                <sort_order>40</sort_order>
                            </settings>
                        </children>
                    </homepage>
                </children>
            </magazento>
        </menu>
    </adminhtml>
    <default>
        <homepage>
            <options>
                <actions>1</actions>
                <price>1</price>
                <salable>1</salable>
                <noproduct>There are no products that match your criteria. Please try again with different options.</noproduct>
                <count>4</count>
            </options>
            <topsell>
                <enable>1</enable>
                <title>TOPSELLERS</title>
                <count>4</count>
                <days>365</days>
                <cat>0</cat>
            </topsell>
            <new>
                <enable>1</enable>
                <title>NEW PRODUCTS</title>
                <count>4</count>
                <from>2007-08-23</from>
            </new>
            <popular>
                <enable>1</enable>
                <title>POPULAR PRODUCTS</title>
                <count>4</count>
            </popular>
            <toprated>
                <enable>1</enable>
                <title>TOPRATED PRODUCTS</title>
                <count>4</count>
            </toprated>
            <review>
                <enable>1</enable>
                <title>OUR LAST REVIEWS</title>
                <count>10</count>
            </review>
        </homepage>
    </default>
</config>