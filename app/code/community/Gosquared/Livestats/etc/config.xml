<?xml version="1.0"?>
<config>
	<modules>
		<Gosquared_Livestats>
			<version>0.1.7</version>
		</Gosquared_Livestats>
	</modules>
	<global>
		<blocks>
			<livestats>
				<class>Gosquared_Livestats_Block</class>
			</livestats>
		</blocks>
		<models>
			<livestats>
				<class>Gosquared_Livestats_Model</class>
			</livestats>
		</models>
		<helpers>
            <livestats>
                <class>Gosquared_Livestats_Helper</class>
            </livestats>
        </helpers>
	</global>
	
	<admin>
        <routers>
             <adminhtml>
                 <args>
                     <modules>
                         <gosquared_livestats before="Mage_Adminhtml">Gosquared_Livestats_Adminhtml</gosquared_livestats>
                     </modules>
                 </args>
             </adminhtml>
        </routers>
    </admin>
	<adminhtml>
		<acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <livestats>
                                            <title>Livestats</title>
                                        </livestats>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
		<layout>
			<updates>
				<livestats>
					<file>livestats.xml</file>
				</livestats>
			</updates>
		</layout>
	</adminhtml>
	
	<frontend>
		<layout>
			<updates>
				<livestats>
					<file>livestats.xml</file>
				</livestats>
			</updates>
		</layout>
	</frontend>
	
	<default>
		<livestats>
			<settings>
				<acctcode>GSN-000000-X</acctcode>
				<userdisplay>2</userdisplay>
				<admintrack>1</admintrack>
			</settings>
		</livestats>
	</default>
</config>