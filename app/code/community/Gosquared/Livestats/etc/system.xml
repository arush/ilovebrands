<?xml version="1.0"?>
<config>
	<tabs>
		<gosquared translate="label" module="livestats">
			<label>GoSquared</label>
			<sort_order>310</sort_order>
		</gosquared>
	</tabs>
	<sections>
		<livestats translate="label" module="livestats">
			<tab>gosquared</tab>
			<label>Settings</label>
			<sort_order>100</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<settings translate="label">
					<label>GoSquared Options</label>
					<frontend_type>text</frontend_type>
					<sort_order>200</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<acctcode translate="label">
							<label>Site Token</label>
							<frontend_type>text</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment><![CDATA[Your GoSquared Site Token from gosquared.com]]></comment>
						</acctcode>
						<userdisplay translate="label">
							<label>Display users as</label>
							<frontend_type>radios</frontend_type>
							<source_model>Gosquared_Livestats_Model_Adminhtml_System_Source_Username</source_model>
							<sort_order>15</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment><![CDATA[Replace GoSquared's default visitor IDs with Magento's User IDs, real names or email addresses.]]></comment>
						</userdisplay>
						<admintrack>
							<label>Track admin pages</label>
							<frontend_type>radios</frontend_type>
							<source_model>Gosquared_Livestats_Model_Adminhtml_System_Source_Track</source_model>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment><![CDATA[Track Magento's admin pages (Where you are now) with GoSquared.]]></comment>
						</admintrack>
					</fields>
				</settings>
			</groups>
		</livestats>
	</sections>
</config>