<?xml version="1.0"?>
<layout>
    <adminhtml_customer_formtype_index>
        <reference name="content">
            <block type="evogue_customer/adminhtml_customer_formtype" name="evogue_customer_formtype" />
        </reference>
    </adminhtml_customer_formtype_index>

    <adminhtml_customer_formtype_new>
        <reference name="content">
            <block type="evogue_customer/adminhtml_customer_formtype_edit" name="evogue_customer_formtype_new" />
        </reference>
    </adminhtml_customer_formtype_new>

    <adminhtml_customer_formtype_edit>
        <reference name="head">
            <action method="setCanLoadExtJs"><flag>1</flag></action>
        </reference>
        <reference name="content">
            <block type="evogue_customer/adminhtml_customer_formtype_edit" name="evogue_customer_formtype_edit" />
        </reference>
        <reference name="left">
            <block type="evogue_customer/adminhtml_customer_formtype_edit_tabs" name="evogue_customer_formtype_edit_tabs">
                <block type="evogue_customer/adminhtml_customer_formtype_edit_tab_general" name="evogue_customer_formtype_edit_tab_general"></block>
                <action method="addTab">
                    <name>evogue_customer_formtype_edit_tab_general</name>
                    <block>evogue_customer_formtype_edit_tab_general</block>
                </action>
                <block type="evogue_customer/adminhtml_customer_formtype_edit_tab_tree" name="evogue_customer_formtype_edit_tab_tree" template="evogue/customer/formtype/edit/tab/tree.phtml"></block>
                <action method="addTab">
                    <name>evogue_customer_formtype_edit_tab_tree</name>
                    <block>evogue_customer_formtype_edit_tab_tree</block>
                </action>
            </block>
        </reference>
    </adminhtml_customer_formtype_edit>

    <!-- shared scope (website) switcher -->
    <scope_switcher>
        <block type="evogue_customer/adminhtml_form_renderer_fieldset_element" name="fieldset_element_renderer" template="evogue/customer/form/renderer/fieldset/element.phtml" />
        <reference name="left">
            <block type="adminhtml/store_switcher" name="website_switcher" before="-" template="evogue/customer/website/switcher.phtml">
                <action method="setStoreVarName"><value>website</value></action>
                <action method="setDefaultStoreName" translate="name"><name>Default Values</name></action>
            </block>
        </reference>
    </scope_switcher>

    <!-- customer attributes -->
    <adminhtml_customer_attribute_index>
        <reference name="content">
            <block type="evogue_customer/adminhtml_customer_attribute" name="evogue_customer_attribute" />
        </reference>
    </adminhtml_customer_attribute_index>

    <adminhtml_customer_attribute_edit>
        <update handle="scope_switcher"/>
        <reference name="content">
            <block type="evogue_customer/adminhtml_customer_attribute_edit" name="evogue_customer_attribute_edit" />
        </reference>
        <reference name="left">
            <block type="evogue_customer/adminhtml_customer_attribute_edit_tabs" name="evogue_customer_attribute_edit_tabs">
                <block type="evogue_customer/adminhtml_customer_attribute_edit_tab_main" name="evogue_customer_attribute_edit_tab_general" />
                <action method="addTab"><name>general</name><block>evogue_customer_attribute_edit_tab_general</block></action>
                <block type="evogue_customer/adminhtml_customer_attribute_edit_tab_options" name="evogue_customer_attribute_edit_tab_options" />
                <action method="addTab"><name>options</name><block>evogue_customer_attribute_edit_tab_options</block></action>
            </block>
        </reference>
        <reference name="js">
            <block type="evogue_customer/adminhtml_customer_attribute_edit_js" template="evogue/customer/attribute/js.phtml" />
        </reference>
    </adminhtml_customer_attribute_edit>

    <adminhtml_customer_attribute_new>
        <remove name="website_switcher" />
    </adminhtml_customer_attribute_new>

    <!-- customer address attributes -->
    <adminhtml_customer_address_attribute_index>
        <reference name="content">
            <block type="evogue_customer/adminhtml_customer_address_attribute" name="evogue_customer_address_attribute" />
        </reference>
    </adminhtml_customer_address_attribute_index>

    <adminhtml_customer_address_attribute_edit>
        <update handle="scope_switcher"/>
        <reference name="content">
            <block type="evogue_customer/adminhtml_customer_address_attribute_edit" name="evogue_customer_address_attribute_edit" />
        </reference>
        <reference name="left">
            <block type="evogue_customer/adminhtml_customer_address_attribute_edit_tabs" name="evogue_customer_address_attribute_edit_tabs">
                <block type="evogue_customer/adminhtml_customer_address_attribute_edit_tab_general" name="evogue_customer_address_attribute_edit_tab_general" />
                <action method="addTab"><name>general</name><block>evogue_customer_address_attribute_edit_tab_general</block></action>
                <block type="evogue_customer/adminhtml_customer_address_attribute_edit_tab_options" name="evogue_customer_address_attribute_edit_tab_options" />
                <action method="addTab"><name>options</name><block>evogue_customer_address_attribute_edit_tab_options</block></action>
            </block>
        </reference>
        <reference name="js">
            <block type="evogue_customer/adminhtml_customer_attribute_edit_js" template="evogue/customer/attribute/js.phtml" />
        </reference>
    </adminhtml_customer_address_attribute_edit>

    <adminhtml_customer_address_attribute_new>
        <remove name="website_switcher" />
    </adminhtml_customer_address_attribute_new>
</layout>
