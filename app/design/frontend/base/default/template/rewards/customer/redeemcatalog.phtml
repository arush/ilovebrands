                    <tr>
                        <td align="center" width="48%" style="vertical-align:text-bottom">
                            <p class="product-image">
                                <a href="<?php echo $products[$product_count]->getProductUrl() ?>"
                                   title="<?php echo $this->htmlEscape($this->getImageLabel($products[$product_count], 'small_image')) ?>">

                                    <img src="<?php echo $this->helper('catalog/image')->init($products[$product_count], 'small_image')->resize(50, 50); ?>"
                                         width="50" height="50"
                                         alt="<?php echo $this->htmlEscape($this->getImageLabel($products[$product_count], 'small_image')) ?>"
                                         title="<?php echo $this->htmlEscape($this->getImageLabel($products[$product_count], 'small_image')) ?>" />
                                </a>
                            </p>
                            <h5>
                                <a href="<?php echo $products[$product_count]->getProductUrl() ?>"
                                   title="<?php echo $this->htmlEscape($products[$product_count]->getName()) ?>">
