     align="center" <?php if (!Mage::getStoreConfigFlag('rewards/display/showSendPointsToAFriend')): ?>
         style="float:none;" <?php endif; ?>>
    <div class="head head-alt2">
        <h4 class="title">
            <?php echo $this->__('Use your points on any of these products') ?>
        </h4>
