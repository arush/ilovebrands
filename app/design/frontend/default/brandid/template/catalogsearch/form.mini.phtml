<form id="search_mini_form" action="<?php echo $this->helper('catalogsearch')->getResultUrl() ?>" method="get">
    <div class="form-search">
        <input id="search" type="text" name="<?php echo $this->helper('catalogsearch')->getQueryParamName() ?>" value="search the store" class="input-text" onclick="searchClick()" onBlur="searchBlur()" />
        <button type="submit" title="<?php echo $this->__('Search') ?>" class="button"><img src="<?php echo $this->getSkinUrl();?>images/magnifier.jpg" /></button>
        <div id="search_autocomplete" class="search-autocomplete"></div>
        <script type="text/javascript">
        //<![CDATA[
            var searchForm = new Varien.searchForm('search_mini_form', 'search', '<?php echo $this->__('Search entire store here...') ?>');
            searchForm.initAutocomplete('<?php echo $this->helper('catalogsearch')->getSuggestUrl() ?>', 'search_autocomplete');
			
			function searchClick(){
				var searchTerm = document.getElementById('search').value;
				if (searchTerm == 'search the store'){
					document.getElementById('search').value = "";
				}
			}

			function searchBlur(){
				var searchTerm = document.getElementById('search').value;
				if (searchTerm == ''){
					document.getElementById('search').value = "search the store";
				}
			}
        //]]>
        </script>
    </div>
</form>
